import("//build/config/fuchsia/rules.gni")
import("//packages/package.gni")

driver_module("ath10k_driver") {
  output_name = "ath10k"

  sources = [
    "binding.c",
    "device.cpp",
    "device.h",
    "driver.cpp",
  ]

  defines = [ "MX_DEBUGLEVEL=2" ]

  deps = [
    "//drivers/wifi/common",
    "//magenta/system/ulib/ddktl",
    "//magenta/system/ulib/mxtl",
  ]

  libs = [
    "ddk",
    "driver",
  ]
}

# TODO(tkilbourn): copy firmware

package("ath10k") {
  deps = [ ":ath10k_driver" ]

  drivers = [ {
        name = "ath10k.so"
     } ]

  # TODO(tkilbourn): firmware
}
