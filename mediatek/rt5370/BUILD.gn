import("//build/config/fuchsia/rules.gni")
import("//packages/package.gni")

driver_module("rt5370_driver") {
  output_name = "rt5370"

  sources = [
    "binding.c",
    "device.cpp",
    "device.h",
    "driver.cpp",
    "register.h",
    "rt5370.h",
  ]

  defines = [ "MX_DEBUGLEVEL=2" ]

  deps = [
    "//drivers/wifi/common",
    "//magenta/system/ulib/ddktl",
    "//magenta/system/ulib/mx",
    "//magenta/system/ulib/mxtl",
  ]

  libs = [
    "ddk",
    "driver",
    "sync",
  ]
}

copy("rt5370-firmware") {
  sources = [
    "firmware/rt2870.bin",
  ]
  outputs = [
    "$root_out_dir/firmware/rt2870.bin",
  ]
}

package("rt5370") {
  deps = [
    ":rt5370_driver",

    # The 'firmware' step has to build in the shared toolchain since we treat
    # firmware blobs as if they were libraries which always use the shared
    # toolchain to build.
    ":rt5370-firmware(//build/toolchain/fuchsia:x64-shared)",
  ]

  drivers = [ {
        name = "rt5370.so"
      } ]

  libraries = [ {
        name = "firmware/rt2870.bin"
      } ]
}
