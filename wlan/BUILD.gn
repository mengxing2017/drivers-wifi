import("//build/config/fuchsia/rules.gni")
import("//packages/package.gni")

config("wlan_config") {
  include_dirs = [ "." ]
  defines = [ "MX_DEBUGLEVEL=2" ]
}

source_set("mlme") {
  sources = [
    "clock.h",
    "device_interface.cpp",
    "device_interface.h",
    "element.cpp",
    "element.h",
    "logging.h",
    "mac_frame.cpp",
    "mac_frame.h",
    "mlme.cpp",
    "mlme.h",
    "packet.cpp",
    "packet.h",
    "scanner.cpp",
    "scanner.h",
    "serialize.h",
    "station.cpp",
    "station.h",
    "timer.cpp",
    "timer.h",
    "wlan.h",
  ]

  public_deps = [
    "//apps/wlan/services:mlme_data_only",
    "//magenta/system/ulib/mx",
    "//magenta/system/ulib/mxtl",
  ]

  public_configs = [ ":wlan_config" ]
}

driver_module("wlan_driver") {
  output_name = "wlan"
  sources = [
    "binding.c",
    "device.cpp",
    "device.h",
    "driver.cpp",
    "logging.h",
  ]

  deps = [
    ":mlme",
    "//magenta/system/ulib/ddktl",
    "//magenta/system/ulib/mx",
    "//magenta/system/ulib/mxtl",
  ]

  libs = [ "driver" ]
}

package("wlan") {
  deps = [
    ":wlan_driver",
  ]

  drivers = [ {
        name = "wlan.so"
      } ]
}
