static_library("libwlan") {
  sources = [
    "binding.c",
    "device.cpp",
    "device.h",
    "driver.cpp",
    "logging.h",
  ]

  defines = [
    "_LIBCPP_ENABLE_THREAD_SAFETY_ANNOTATIONS",
    "MX_DEBUGLEVEL=2",
  ]
  cflags = [ "-Wthread-safety" ]

  deps = [
    "//magenta/system/ulib/mx",
    "//magenta/system/ulib/mxtl",
  ]

  libs = [ "driver" ]
}

shared_library("wlan") {
  deps = [
    ":libwlan(//build/toolchain/fuchsia:${target_cpu}-shared)",
  ]
}
