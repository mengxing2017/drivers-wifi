import("//build/config/fuchsia/rules.gni")

group("testing") {
  public_deps = [
    ":wlan-testdev",
    ":wlan-testutil",
  ]
}

driver_module("wlan-testdev") {
  sources = [
    "binding.c",
    "driver.cpp",
    "test-device.cpp",
    "test-device.h",
  ]

  defines = [
    "_LIBCPP_ENABLE_THREAD_SAFETY_ANNOTATIONS",
    "MX_DEBUGLEVEL=2",
  ]

  cflags = [
    "-Wthread-safety",
    "-Winconsistent-missing-override",
  ]

  deps = [
    "//magenta/system/ulib/ddktl",
    "//magenta/system/ulib/mx",
    "//magenta/system/ulib/mxtl",
  ]

  libs = [
    "ddk",
    "driver",
  ]
}

executable("wlan-testutil") {
  sources = [
    "wlan-testutil.cpp",
  ]

  deps = [
    "//magenta/system/ulib/mx",
    "//magenta/system/ulib/mxtl",
  ]
}
