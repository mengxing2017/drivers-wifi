group("testing") {
  deps = [
    ":wlan-test-driver",
    ":wlan-test-util",
  ]
}

static_library("libwlan-test-driver") {
  sources = [
    "binding.c",
    "driver.cpp",
    "test-device.cpp",
    "test-device.h",
  ]

  defines = [
    "_LIBCPP_ENABLE_THREAD_SAFETY_ANNOTATIONS",
    "MX_DEBUGLEVEL=2",
  ]

  cflags = [
    "-Wthread-safety",
    "-Winconsistent-missing-override",
  ]

  deps = [
    "//magenta/system/ulib/mx",
    "//magenta/system/ulib/mxtl",
  ]

  libs = [ "ddk" ]
}

shared_library("wlan-test-driver") {
  deps = [
    ":libwlan-test-driver(//build/toolchain/fuchsia:${target_cpu}-shared)",
  ]
}

executable("wlan-test-util") {
  sources = [
    "wlan-testutil.cpp",
  ]

  deps = [
    "//magenta/system/ulib/mx",
    "//magenta/system/ulib/mxtl",
  ]
}
